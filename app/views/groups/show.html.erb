<section class="container">
  <div class="columns">
    <div class="column is-2">
      <%= render 'shared/leftmenu' %>
    </div>
    <div class="column is-7">
      <% @posts.each do |post| %>
        <%= link_to post_page_path(post.user.username, post), class: 'has-text-dark' do %>
          <div class="box is-size-5" style="height: 230px;">
            <article class="media">
              <div class="media-left">
                <figure class="image is-64x64">
                  <%= image_tag post.cover_image if post.cover_image.attached? %>
                </figure>
              </div>
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong><%= post.title %></strong> <small><%= post.user.username %></small> <small><%= time_ago_in_words(post.created_at) %></small>
                    <br>
                    <%= strip_tags(post.content).truncate(200) %>
                  </p>
                </div>
                <nav class="level is-mobile">
                  <div class="level-left">
                    <a class="level-item" aria-label="reply">
                      <span class="icon is-small">
                        <i class="fas fa-reply" aria-hidden="true"></i>
                      </span>
                    </a>
                    <a class="level-item" aria-label="retweet">
                      <span class="icon is-small">
                        <i class="fas fa-retweet" aria-hidden="true"></i>
                      </span>
                    </a>
                    <a class="level-item" aria-label="like">
                      <span class="icon is-small">
                        <i class="fas fa-heart" aria-hidden="true"></i>
                      </span>
                    </a>
                  </div>
                </nav>
              </div>
            </article>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>